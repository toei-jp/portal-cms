{
    "name": "toei-jp/portal-cms",
    "description": "Toei-Jp Portal CMS",
    "type": "project",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Toei\\PortalAdmin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "~7.2",
        "slim/slim" : "^3.12",
        "slim/twig-view": "^2.5",
        "slim/flash": "^0.4.0",
        "monolog/monolog": "^2.1",
        "vlucas/phpdotenv": "^3.6",
        "doctrine/orm": "^2.7",
        "laminas/laminas-validator": "^2.13",
        "laminas/laminas-form": "^2.14",
        "laminas/laminas-i18n": "^2.10",
        "laminas/laminas-i18n-resources": "^2.6",
        "laminas/laminas-session": "^2.9",
        "laminas/laminas-uri": "^2.7",
        "microsoft/azure-storage-blob": "^1.5",
        "intervention/image": "^2.5",
        "blue32a/monolog-azure-blob": "^0.2.0",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.5",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.12.37",
        "phpstan/phpstan-doctrine": "^0.12.19",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/phpstan-mockery": "^0.12.7",
        "php-parallel-lint/php-parallel-lint": "^1.2"
    },
    "scripts": {
        "phplint": "vendor/bin/parallel-lint --no-progress --exclude vendor --exclude cache .",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml",
        "phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml",
        "phpstan": "vendor/bin/phpstan analyse -n --no-progress -c phpstan.neon --memory-limit=256M",
        "phpunit": "vendor/bin/phpunit"
    }
}
