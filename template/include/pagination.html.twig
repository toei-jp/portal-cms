{##
 # pageination
 #
 # Parameters:
 # * paginater
 # * route_name
 # * params
 #}
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        
        <li class="page-item {% if pagenater.isFirstPage() %}disabled{% endif %}">
            {% set params = params|merge({ 'p': pagenater.getPreviousPage() }) %}
            <a class="page-link" href="{{ path_for(route_name, {}, params) }}">&laquo;</a>
        </li>
        
        {% for link in pagenater.getLinks() %}
            <li class="page-item {% if pagenater.getPage() == link %}active{% endif %}">
                {% set params = params|merge({ 'p': link }) %}
                <a class="page-link" href="{{ path_for(route_name, {}, params) }}">{{ link }}</a>
            </li>
        {% endfor %}
        
        <li class="page-item {% if pagenater.isLastPage() or pagenater.getLastPage() == 0 %}disabled{% endif %}">
            {% set params = params|merge({ 'p': pagenater.getNextPage() }) %}
            <a class="page-link" href="{{ path_for(route_name, {}, params) }}">&raquo;</a>
        </li>
        
    </ul>
</nav>